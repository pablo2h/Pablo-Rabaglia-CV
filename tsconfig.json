{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/lib/*"]
    },
    "types": ["svelte", "sveltekit", "vite/client"]
  },
  "include": [
    "src/**/*.svelte",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    ".svelte-kit",
    "coverage",
    "assets",
    "9 imagenes de referencia"
  ]
}